<form method="POST" action="/landmarks/<%= @landmark.id %>">
    <input type="hidden" name="_method" value="PATCH" />
    <div>
        <label>Name</label>
        <input type="text" name="landmark[name]" value="<%= @landmark.name %>" id="name" />
    </div>
        <div>
        <label>Year Completed</label>
        <input type="text" name="landmark[year_completed]" value="<%= @landmark.year_completed %>" id="year_completed" />
    </div>

    <input type="submit" id="Edit Landmark" />
</form>
<form method="POST" action="/landmarks/<%= @landmark.id %>">
    <input type="hidden" name="_method" value="DELETE" />
    <input type="submit" value="Delete"/>
</form>


