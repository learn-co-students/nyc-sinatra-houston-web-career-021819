<h2>Edit Info for <%=@figure.name%> (<a class="button" href="/figures/<%=@figure.id%>">go back</a>)
</h2>



<!-- add content here -->
<form method="POST" action="/figures/<%=@figure.id%>">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <p>Name <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name"></p>
        <h2>Titles</h2>
            <p>
                <%@titles.each do |title|%>
                    <%=title.name%> <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title)%>> <br>
                <%end%>
            </p>
            <h2>Create New Title:</h2>
            <input type="text" name="title[name]" id="new_title">

            <h2>Landmarks</h2>
            <p>
                <%@landmarks.each do |landmark|%>
                    <%=landmark.name%> <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"<%='checked' if @figure.landmarks.include?(landmark)%>><br>
                <%end%>
            </p>
            <h2>Create New Landmark:</h2>
            <p>
                Name:<input type="text" name="landmark[name]" id="new_landmark"> Year: <input type="text" name="landmark[year_completed]">
            </p>
            <input type="submit" value="Edit Figure">
</form>
<p></p>
<form method="POST" action="/figures/<%= @figure.id %>">
    <input type="hidden" name="_method" value="DELETE" />
    <input type="submit" value="Delete Figure"/>
</form>
